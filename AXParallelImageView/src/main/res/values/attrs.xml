<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AXParallelImageView">
        <attr name="minStroke" format="dimension"/>
        <attr name="maxStroke" format="dimension"/>
        <attr name="strokePeriod" format="integer"/>
        <attr name="maxLinesCount" format="integer"/>
        <attr name="duration" format="integer"/>
        <attr name="image" format="reference"/>
        <attr name="grayImage" format="reference"/>
        <attr name="autoStart" format="boolean"/>
        <attr name="startPosition" format="dimension"/>

        <attr name="direction" format="enum">
            <enum name="TOP_LEFT" value="0"/>
            <enum name="BOTTOM_RIGHT" value="1"/>
            <enum name="TOP_RIGHT" value="2"/>
            <enum name="BOTTOM_LEFT" value="3"/>
            <enum name="LEFT" value="4"/>
            <enum name="RIGHT" value="5"/>
            <enum name="TOP" value="6"/>
            <enum name="BOTTOM" value="7"/>
        </attr>
    </declare-styleable>
</resources>